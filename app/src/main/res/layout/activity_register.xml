<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_register_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="314dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/quiz_btn_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="72dp"
            android:lineHeight="27sp"
            android:text="회원가입"
            android:textColor="#2d2e35"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="103dp"
            android:lineHeight="27sp"
            android:text="회원가입 후 정확한 정보를 받아보세요!"
            android:textColor="#2d2e35"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="169dp"
            android:lineHeight="27sp"
            android:text="이름"
            android:textColor="#2d2e35"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="203dp"
            android:textAlignment="center"
            android:layout_marginRight="18dp"
            android:background="@drawable/login_shape"
            android:hint="이름을 알려주세요!"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="272dp"
            android:lineHeight="27sp"
            android:text="이메일"
            android:textColor="#2d2e35"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="162dp"
            android:layout_height="54dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="306dp"
            android:background="@drawable/login_shape"
            android:hint="이메일 아이디"
            android:importantForAutofill="no"
            android:inputType="textEmailSubject"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edit_email_address"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="188dp"
            android:layout_marginTop="306dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/login_shape"
            android:hint=" @naver.com"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="383dp"
            android:lineHeight="27sp"
            android:text="비밀번호"
            android:textColor="#2d2e35"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="417dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/login_shape"
            android:hint="영어,숫자,특수문자를 활용하여주세요!"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/password_edit_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Password Confirm"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_signIn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:text="회원가입"
            tools:ignore="ButtonStyle,HardcodedText" />


    </FrameLayout>
</ScrollView>