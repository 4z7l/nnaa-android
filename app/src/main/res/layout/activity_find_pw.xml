<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPwActivity">

    <TextView
        android:id="@+id/find_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="72dp"
        android:lineSpacingExtra="7sp"
        android:text="비밀번호 찾기"
        android:textColor="#2d2e35"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/find_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:lineSpacingExtra="13sp"
        android:text="가입하신 이메일을 입력해주세요!"
        android:textColor="#2d2e35"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_title"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_find_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="18dp"
        android:contentDescription="@string/StringValue"
        android:src="@drawable/quiz_btn_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:lineSpacingExtra="12sp"
        android:text="이메일"
        android:textColor="#2d2e35"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_content"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edit_find"
        android:layout_width="324dp"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:autofillHints="true"
        android:background="@drawable/login_shape"
        android:hint="이메일을 입력해주세요"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_email"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_find"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#2d2e35"
        android:lineSpacingExtra="13sp"
        android:text="비밀번호 전송"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>